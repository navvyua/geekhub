<h1>Posts</h1>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Author</th>
      <th>Title</th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.id %></td>
        <td><%= post.user.email %></td>
        <td><%= post.title %></td>
        <td><%= link_to 'Delete', admin_post_path(post), method: :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>