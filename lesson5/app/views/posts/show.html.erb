<p>Title: <%= @post.title %></p>

<p>Text: <%= @post.text %></p>

<p><%= image_tag @post.image, size: '600x300' %></p>

<p><%= link_to 'Edit', edit_user_post_path(@user, @post) %></p>

<p><%= link_to 'Delete', [@user, @post], method: :delete %></p>

<p><%= link_to 'Back to all posts', user_posts_path(@user) %></p>
