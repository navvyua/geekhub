<table>
  <thead>
    <tr>
      <td></td>
      <td>Title</td>
      <td></td>
      <td></td>
      <td></td>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= image_tag post.image, size: '200x100' %></td>
        <td><%= post.title %></td>
        <td><%= link_to 'Show', [@user, post] %></td>
        <td><%= link_to 'Edit', edit_user_post_path(@user, post) %></td>
        <td><%= link_to 'Delete', [@user, post], method: :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>
