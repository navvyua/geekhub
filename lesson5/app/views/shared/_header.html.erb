<% if current_user %>
  <div>
    <p>
      <%= image_tag current_user.profile.avatar, size: '100x50' %>
      <%= current_user.email %>
      <%= link_to 'Sign out', log_out_path %>
      <% if current_user.admin %>
        | <%= link_to 'Admin page', admin_users_path%>
      <% end %>
    </p>
  </div>
<% end %>
