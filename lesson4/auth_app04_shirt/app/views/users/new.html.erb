<h1>Sign Up</h1>

<%= form_for @user do |f| %>
  <p>
    <%= f.label :login %><br />
    <%= f.text_field :login %>
  </p>

  <p>
    <%= f.label :password %><br />
    <%= f.password_field :password %>
  </p>

  <p>
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation %>
  </p>

  <p><%= f.submit 'Sign Up' %></p>
<% end %>

<%= link_to 'Sign In', sign_in_path %>