<p>
  Signed in as <%= link_to current_user.username, current_user %>,
  <%= link_to 'Sign Out', sign_out_path %>
</p>

<h1>List of characters:</h1>

<%= link_to 'Create new character', new_character_path %>

<table>
  <tr>
    <th>ID</th>
    <th>Name</th>
  </tr>
  <% @characters.each do |character| %>
    <tr>
      <td><%= character.id %></td>
      <td><%= character.name %></td>
      <td><%= link_to 'Show', character %></td>
      <td><%= link_to 'Edit', edit_character_path(character) %></td>
      <td><%= link_to 'Delete', character, method: :delete,
                      data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>